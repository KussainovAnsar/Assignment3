<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/styleadminpanel.css">
</head>
<body>
    <header>
        <h1>Admin Panel</h1>
    </header>
    <main>
        <section id="users">
            <h2>Users</h2>
            <ul class="user-list">
                <% users.forEach(user => { %>
                    <li>
                        <span><%= user.username %></span>
                        <button class="delete-btn" data-user-id="<%= user._id %>">Delete</button>
                        <button class="edit-btn" data-user-id="<%= user._id %>">Edit</button>
                    </li>
                <% }) %>
            </ul>
            <form action="/admin/adduser" method="post">
                <input type="text" name="username" placeholder="Username" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Add User</button>
            </form>
        </section>
        <section id="weather">
            <h2>Weather Data</h2>
            <table>
                <thead>
                    <tr>
                        <th>City</th>
                        <th>Temperature (Â°C)</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% weatherData.forEach(data => { %>
                        <tr>
                            <td><%= data.cityName %></td>
                            <td><%= data.temperature %></td>
                            <td><%= data.description %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('addUserBtn').addEventListener('click', function() {
                var formData = new FormData(document.getElementById('addUserForm'));
                fetch('/admin/adduser', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error adding user');
                    }
                    return response.json();
                })
                .then(data => {
                    var newUserHtml = '<li>' + data.username + '</li>'; 
                    document.getElementById('userList').insertAdjacentHTML('beforeend', newUserHtml);
                })
                .catch(error => {
                    console.error(error);
                    alert('Error adding user');
                });
            });
        });

        function editUser(userId) {
        var username = prompt('Enter new username:');
        var password = prompt('Enter new password:');
        if (username && password) {
            fetch(`/admin/edituser/${userId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    username: username,
                    password: password
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error editing user');
                }
                window.location.reload();
            })
            .catch(error => {
                console.error(error);
                alert('Error editing user');
            });
        }
    }

    function deleteUser(userId) {
        if (confirm('Are you sure you want to delete this user?')) {
            fetch(`/admin/deleteuser/${userId}`, {
                method: 'DELETE'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error deleting user');
                }
                
                window.location.reload();
            })
            .catch(error => {
                console.error(error);
                alert('Error deleting user');
            });
        }
    }

    var editButtons = document.querySelectorAll('.edit-btn');
    var deleteButtons = document.querySelectorAll('.delete-btn');

    editButtons.forEach(button => {
        button.addEventListener('click', function() {
            var userId = this.dataset.userId;
            editUser(userId);
        });
    });

    deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
            var userId = this.dataset.userId;
            deleteUser(userId);
        });
    }); 
    </script>
</body>
</html>
